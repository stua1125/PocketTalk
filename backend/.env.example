# =============================================================================
# PocketTalk Production Environment Variables
# Copy this file to .env and fill in the values before running:
#   docker compose -f docker-compose.prod.yml --env-file .env up -d
# =============================================================================

# --- PostgreSQL ---
POSTGRES_DB=pockettalk
POSTGRES_USER=pockettalk
POSTGRES_PASSWORD=CHANGE_ME_postgres_strong_password

# --- Redis ---
# Redis uses default config (no auth). Add REDIS_PASSWORD if you enable requirepass.

# --- RabbitMQ ---
RABBITMQ_USER=pockettalk
RABBITMQ_PASSWORD=CHANGE_ME_rabbitmq_strong_password

# --- JWT ---
# Must be at least 256 bits (32+ characters) for HS256 signing
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_64

# --- Grafana ---
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_grafana_strong_password
